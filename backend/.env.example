# Database Configuration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Auth0 Configuration (REQUIRED)
# Your Auth0 tenant's issuer URI (e.g., https://your-tenant.auth0.com/)
AUTH0_ISSUER_URI=https://your-tenant.auth0.com/

# Your Auth0 tenant domain (e.g., your-tenant.auth0.com)
AUTH0_DOMAIN=your-tenant.auth0.com

# Your API's identifier (audience) - create this in Auth0 Dashboard > APIs
AUTH0_AUDIENCE=https://api.workout-planner.com

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Optional: SSL Configuration (for production)
SSL_ENABLED=false
# SSL_KEYSTORE=/path/to/keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password
# SSL_KEYSTORE_TYPE=PKCS12

# Optional: Swagger UI (disable in production)
SWAGGER_ENABLED=true

# Docker/PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=sonarqube
POSTGRES_USER=sonar
POSTGRES_PASSWORD=sonar_password
SONAR_JDBC_URL=jdbc:postgresql://postgres:5432/sonarqube
SONAR_JDBC_USERNAME=sonar
SONAR_JDBC_PASSWORD=sonar_password
