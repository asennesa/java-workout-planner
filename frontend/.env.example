# Auth0 Configuration
# Copy this file to .env.local and fill in your Auth0 credentials
# Note: Vite uses VITE_ prefix instead of REACT_APP_

# Your Auth0 tenant domain (e.g., your-tenant.auth0.com)
VITE_AUTH0_DOMAIN=your-tenant.auth0.com

# Your Auth0 application's Client ID
VITE_AUTH0_CLIENT_ID=your-client-id

# Your API's identifier (audience) - must match backend's auth0.audience
VITE_AUTH0_AUDIENCE=https://api.workout-planner.com

# Backend API URL (optional - defaults to http://localhost:8081/api/v1)
VITE_API_URL=http://localhost:8081/api/v1
